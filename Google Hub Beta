-- Minimizar/Restaurar
local isMinimized = true -- <--- come√ßa como minimizado
Minimize.MouseButton1Click:Connect(function()
    if isMinimized then
        MainFrame:TweenSize(UDim2.new(0, 450, 0, 320), "Out", "Quad", 0.25, true)
    else
        MainFrame:TweenSize(UDim2.new(0, 450, 0, 40), "Out", "Quad", 0.25, true)
    end
    isMinimized = not isMinimized
end)

-- Fechar
Close.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
end)

