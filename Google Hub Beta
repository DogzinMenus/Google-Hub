UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Parent = SideFrame
 
-- Fun√ß√£o para limpar o conte√∫do do OptionsFrame
local function ClearOptions()
    for _, child in ipairs(OptionsFrame:GetChildren()) do
        if not child:IsA("UIListLayout") then
            child:Destroy()
        end
    end
end
 
-- Criar bot√£o da aba "Main"
local MainTabButton = Instance.new("TextButton")
MainTabButton.Name = "MainTab"
MainTabButton.Size = UDim2.new(1, -10, 0, 40)
MainTabButton.Position = UDim2.new(0, 5, 0, 0)
MainTabButton.BackgroundTransparency = 1
MainTabButton.Text = "üè† Main"
MainTabButton.TextColor3 = Color3.fromRGB(255, 255, 255) -- branco por padr√£o
MainTabButton.Font = Enum.Font.GothamBold
MainTabButton.TextSize = 20
MainTabButton.Parent = SideFrame
 
local mainActive = false
 
-- Fun√ß√£o para criar bot√µes simples dentro do OptionsFrame
local function createOptionButton(text, positionY, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -10, 0, 35)
    btn.Position = UDim2.new(0, 5, 0, positionY)
    btn.BackgroundTransparency = 1
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 18
    btn.Text = "‚Üí " .. text
    btn.Parent = OptionsFrame
    
    local active = false
    btn.MouseButton1Click:Connect(function()
        active = not active
        if active then
            btn.TextColor3 = Color3.fromRGB(0, 255, 0) -- verde ativo
        else
            btn.TextColor3 = Color3.fromRGB(255, 255, 255) -- branco inativo
        end
        if callback then
            callback(active)
        end
    end)
    return btn
end
 
local lastSafePos = nil
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
 
-- Atualiza posi√ß√£o segura para Anti Void
RunService.Heartbeat:Connect(function()
    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        local root = player.Character.HumanoidRootPart
        if root.Position.Y > 5 then
            lastSafePos = root.Position
        end
    end
end)
 
-- Estado dos toggles
local antiVoidEnabled = false
local antiSitEnabled = false
local antiAudioEnabled = false
local autoRejoinEnabled = false
local antiKickEnabled = false
local antiDenunciaEnabled = false
local antiColisaoEnabled = false
 
-- Fun√ß√µes das op√ß√µes
 
local function activateAntiVoid(active)
    antiVoidEnabled = active
    if active then
        spawn(function()
            while antiVoidEnabled do
                wait(0.5)
                local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
                if root and root.Position.Y < -10 and lastSafePos then
                    root.CFrame = CFrame.new(lastSafePos + Vector3.new(0,5,0))
                end
            end
        end)
    end
end
 
local function activateAntiSit(active)
    antiSitEnabled = active
    if active then
        if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
            player.Character.Humanoid.Seated:Connect(function(sit)
                if sit then
                    player.Character.Humanoid.Sit = false
                end
            end)
        end
    end
end
 
local function activateAntiAudio(active)
    antiAudioEnabled = active
    if active then
        spawn(function()
            while antiAudioEnabled do
                wait(1)
                for _, sound in pairs(workspace:GetDescendants()) do
                    if sound:IsA("Sound") then
                        if sound.Playing and sound.Parent ~= workspace then
                            sound:Stop()
                        end
                    end
                end
            end
        end)
    end
end
 
local function activateAutoRejoin(active)
    autoRejoinEnabled = active
    if active then
        spawn(function()
            while autoRejoinEnabled do
                wait(10)
                local ping = game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue()
                if ping and ping > 300 then
                    game:GetService("TeleportService"):Teleport(game.PlaceId, player)
                end
            end
        end)
    end
end
 
local function activateAntiKick(active)
    antiKickEnabled = active
    if active then
        -- Placeholder para l√≥gica anti kick
        print("Anti Kick ativado")
    end
end
 
local function activateAntiDenuncia(active)
    antiDenunciaEnabled = active
    if active then
        -- Placeholder para l√≥gica anti den√∫ncia
        print("Anti Den√∫ncia ativado")
    end
end
 
local function activateAntiColisao(active)
    antiColisaoEnabled = active
    if player.Character then
        for _, part in pairs(player.Character:GetChildren()) do
            if part:IsA("BasePart") then
                part.CanCollide = not active
            end
        end
    end
    if active then
        if player.Character then
            player.Character.ChildAdded:Connect(function(child)
                if antiColisaoEnabled and child:IsA("BasePart") then
                    child.CanCollide = false
                end
            end)
        end
    end
end
 
-- Fun√ß√£o para ativar a aba Main e criar os bot√µes
local function ActivateMainTab()
    mainActive = true
    MainTabButton.TextColor3 = Color3.fromRGB(0, 255, 0)
    ClearOptions()
    
    -- T√≠tulo da aba
    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, -10, 0, 30)
    Title.Text = "üè† Main"
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.BackgroundTransparency = 1
    Title.TextSize = 20
    Title.Font = Enum.Font.GothamBold
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.Parent = OptionsFrame
    
    -- Bot√µes da aba Main
    createOptionButton("Anti Void", 40, activateAntiVoid)
    createOptionButton("Anti Sit", 85, activateAntiSit)
    createOptionButton("Anti √Åudio All", 130, activateAntiAudio)
    createOptionButton("Auto Rejoin", 175, activateAutoRejoin)
    createOptionButton("Anti Kick", 220, activateAntiKick)
    createOptionButton("Anti Den√∫ncia", 265, activateAntiDenuncia)
    createOptionButton("Anti Colis√£o", 310, activateAntiColisao)
end
 
-- Evento do bot√£o da aba Main
MainTabButton.MouseButton1Click:Connect(function()
    if mainActive then
        mainActive = false
        MainTabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        ClearOptions()
    else
        ActivateMainTab()
    end
end)
 
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

local TrollTabButton = Instance.new("TextButton")
TrollTabButton.Name = "TrollTab"
TrollTabButton.Size = UDim2.new(1, -10, 0, 40)
TrollTabButton.Position = UDim2.new(0, 5, 0, 45)
TrollTabButton.BackgroundTransparency = 1
TrollTabButton.Text = "üòà Troll"
TrollTabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
TrollTabButton.Font = Enum.Font.GothamBold
TrollTabButton.TextSize = 20
TrollTabButton.Parent = SideFrame

local trollActive = false
local selectedPlayer = nil
local isViewing = false
local viewConnection
local ultimaPosicao = nil

local function findPlayerByName(name)
    for _, plr in pairs(Players:GetPlayers()) do
        if plr.Name:lower():sub(1, #name) == name:lower() then
            return plr
        end
    end
    return nil
end

local function ClearOptions()
    for _, child in pairs(OptionsFrame:GetChildren()) do
        if not child:IsA("UIListLayout") then
            child:Destroy()
        end
    end
end

local function ActivateTrollTab()
    trollActive = true
    TrollTabButton.TextColor3 = Color3.fromRGB(0, 255, 0)
    MainTabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    ClearOptions()
    
    -- T√≠tulo
    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, -10, 0, 30)
    Title.Text = "üòà Troll"
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.BackgroundTransparency = 1
    Title.TextSize = 20
    Title.Font = Enum.Font.GothamBold
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.Parent = OptionsFrame
    
    -- TextBox Nome
    local nameBox = Instance.new("TextBox")
    nameBox.Size = UDim2.new(1, -10, 0, 35)
    nameBox.Position = UDim2.new(0, 5, 0, 40)
    nameBox.PlaceholderText = "Nome"
    nameBox.ClearTextOnFocus = false
    nameBox.Text = ""
    nameBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    nameBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    nameBox.Font = Enum.Font.Gotham
    nameBox.TextSize = 18
    nameBox.Parent = OptionsFrame
    
    nameBox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            local plr = findPlayerByName(nameBox.Text)
            if plr then
                selectedPlayer = plr
                game.StarterGui:SetCore("ChatMakeSystemMessage", {
                Text = "Selecionado: " .. selectedPlayer.Name,
                Color = Color3.new(0, 1, 0),
                Font = Enum.Font.GothamBold,
                TextSize = 18
                })
            else
                selectedPlayer = nil
                game.StarterGui:SetCore("ChatMakeSystemMessage", {
                Text = "Jogador n√£o encontrado.",
                Color = Color3.new(1, 0, 0),
                Font = Enum.Font.GothamBold,
                TextSize = 18
                })
            end
        end
    end)
    
    -- Bot√£o Troll
    local trollButton = Instance.new("TextButton")
    trollButton.Size = UDim2.new(1, -10, 0, 35)
    trollButton.Position = UDim2.new(0, 5, 0, 85)
    trollButton.Text = "Troll"
    trollButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    trollButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    trollButton.Font = Enum.Font.GothamBold
    trollButton.TextSize = 18
    trollButton.AutoButtonColor = false
    trollButton.Parent = OptionsFrame
    
    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.new(1, 1, 1)
    stroke.Thickness = 1.5
    stroke.Parent = trollButton
    
    trollButton.MouseButton1Click:Connect(function()
        local char = player.Character or player.CharacterAdded:Wait()
        local hrp = char:WaitForChild("HumanoidRootPart", 2)
        if selectedPlayer and selectedPlayer.Character and selectedPlayer.Character:FindFirstChild("HumanoidRootPart") and hrp then
            ultimaPosicao = hrp.CFrame
            
            local backpack = player:FindFirstChildOfClass("Backpack")
            if backpack then
                for _, tool in pairs(backpack:GetChildren()) do
                    if tool:IsA("Tool") then
                        tool.Parent = char
                    end
                end
            end
            
            local success, err = pcall(function()
                hrp.CFrame = CFrame.new(Vector3.new(-82.61, 20.94, -129.95))
            end)
            if not success then
                local rand = Vector3.new(math.random(-300, 300), 50, math.random(-300, 300))
                hrp.CFrame = CFrame.new(rand)
            end
            
            task.wait(2)
            
            local targetHRP = selectedPlayer.Character:FindFirstChild("HumanoidRootPart")
            if targetHRP then
                hrp.CFrame = CFrame.new(targetHRP.Position.X, targetHRP.Position.Y - 5, targetHRP.Position.Z)
            end
            
            task.wait(2)
            
            hrp.CFrame = CFrame.new(0, -10000, 0)
            
            task.wait(1)
            for _, tool in pairs(char:GetChildren()) do
                if tool:IsA("Tool") then
                    tool.Parent = backpack
                end
            end
        else
            game.StarterGui:SetCore("ChatMakeSystemMessage", {
            Text = "Nenhum jogador selecionado ou inv√°lido.",
            Color = Color3.new(1, 0, 0),
            Font = Enum.Font.GothamBold,
            TextSize = 18
            })
        end
    end)
    
    -- Bot√£o View
    local viewButton = Instance.new("TextButton")
    viewButton.Size = UDim2.new(1, -10, 0, 35)
    viewButton.Position = UDim2.new(0, 5, 0, 130)
    viewButton.Text = "View"
    viewButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    viewButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    viewButton.Font = Enum.Font.GothamBold
    viewButton.TextSize = 18
    viewButton.AutoButtonColor = false
    viewButton.Parent = OptionsFrame
    
    local strokeView = Instance.new("UIStroke")
    strokeView.Color = Color3.new(1, 1, 1)
    strokeView.Thickness = 1.5
    strokeView.Parent = viewButton
    
    viewButton.MouseButton1Click:Connect(function()
        if not selectedPlayer or not selectedPlayer.Character or not selectedPlayer.Character:FindFirstChild("Humanoid") then
            game.StarterGui:SetCore("ChatMakeSystemMessage", {
            Text = "Nenhum jogador selecionado v√°lido para View.",
            Color = Color3.new(1, 0, 0),
            Font = Enum.Font.GothamBold,
            TextSize = 18
            })
            return
        end
        
        if not isViewing then
            isViewing = true
            camera.CameraSubject = selectedPlayer.Character:FindFirstChild("Humanoid")
            camera.CameraType = Enum.CameraType.Track
        else
            isViewing = false
            camera.CameraSubject = player.Character and player.Character:FindFirstChild("Humanoid")
            camera.CameraType = Enum.CameraType.Custom
        end
    end)
    
    -- Bot√£o Bring
    local bringButton = Instance.new("TextButton")
    bringButton.Size = UDim2.new(1, -10, 0, 35)
    bringButton.Position = UDim2.new(0, 5, 0, 175)
    bringButton.Text = "Bring"
    bringButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    bringButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    bringButton.Font = Enum.Font.GothamBold
    bringButton.TextSize = 18
    bringButton.AutoButtonColor = false
    bringButton.Parent = OptionsFrame
    
    local strokeBring = Instance.new("UIStroke")
    strokeBring.Color = Color3.new(1, 1, 1)
    strokeBring.Thickness = 1.5
    strokeBring.Parent = bringButton
    
    bringButton.MouseButton1Click:Connect(function()
        local char = player.Character or player.CharacterAdded:Wait()
        local hrp = char:WaitForChild("HumanoidRootPart", 2)
        if ultimaPosicao and hrp then
            hrp.CFrame = ultimaPosicao
        else
            game.StarterGui:SetCore("ChatMakeSystemMessage", {
            Text = "Nenhuma posi√ß√£o salva para retornar.",
            Color = Color3.new(1, 0, 0),
            Font = Enum.Font.GothamBold,
            TextSize = 18
            })
        end
    end)
end

-- Clique no bot√£o da aba Troll
TrollTabButton.MouseButton1Click:Connect(function()
    if trollActive then
        trollActive = false
        TrollTabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        ClearOptions()
    else
        ActivateTrollTab()
        mainActive = false
        MainTabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    end
end)
